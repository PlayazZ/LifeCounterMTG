<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Number of Players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numPlayers" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:id="@+id/players1"
            app:layout_constraintEnd_toStartOf="@+id/players2"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/numPlayers"/>
    <Button
            android:text="4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/players4"
            app:layout_constraintStart_toEndOf="@+id/players3"
            app:layout_constraintBaseline_toBaselineOf="@+id/players3"
            app:layout_constraintEnd_toStartOf="@+id/players5"
    />
    <Button
            android:text="6"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/players6"
            app:layout_constraintStart_toEndOf="@+id/players5"
            app:layout_constraintBaseline_toBaselineOf="@+id/players5" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/players3"
            app:layout_constraintStart_toEndOf="@+id/players2"
            app:layout_constraintBaseline_toBaselineOf="@+id/players2"
            app:layout_constraintEnd_toStartOf="@+id/players4"
    />
    <Button
            android:text="5"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/players5"
            app:layout_constraintStart_toEndOf="@+id/players4"
            app:layout_constraintEnd_toStartOf="@+id/players6"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/numPlayers"/>
    <Button
            android:text="2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/players2"
            app:layout_constraintStart_toEndOf="@+id/players1"
            app:layout_constraintEnd_toStartOf="@+id/players3"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/numPlayers"/>
    <TextView
            android:text="Starting Health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/startingHealth" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/players4"/>
    <Button
            android:text="30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/health30"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/startingHealth"/>
    <Button
            android:text="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/health20" app:layout_constraintEnd_toStartOf="@+id/health30"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/health30"/>
    <Button
            android:text="40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/health40" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp" app:layout_constraintStart_toEndOf="@+id/health30"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/health30"/>
    <TextView
            android:text="Players:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/health20" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalPlayers" app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView3"/>
    <TextView
            android:text="Health:"
            android:layout_width="50dp"
            android:layout_height="22dp"
            android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:gravity="right"/>
    <TextView
            android:layout_width="59dp"
            android:layout_height="22dp"
            android:id="@+id/totalHealth" app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView5"/>
    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/start" app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
</android.support.constraint.ConstraintLayout>